// Modules.
var argv   = require("minimist")(process.argv.slice(2)),
    extend = require("extend");

// Supported Options (base on Less options).
var supportedOptions = {
    // Help.
    "help"                  : { "description": "Show common help.\nUse --help=full to show all options.", "alias": "h" },

    // Seeker Options.
    "output-directory"      : { "description": "Sets output directory of compiled file.", "alias": "o", "advanced": true },
    "interval"              : { "description": "Sets interval of seeker.\nDefault is 100ms.", "alias": "i" },

    // Less Options.
    "include-path"          : { "description": "Sets include paths. Separated by \":\". Use \";\" on Windows.", "advanced": true },
    "no-ie-compat"          : { "description": "Disables IE compatibility checks.", "advanced": true },
    "no-js"                 : { "description": "Disables JavaScript in less files.", "advanced": true },
    "strict-imports"        : { "description": "Forces evaluation of imports.", "advanced": true },
    "insecure"              : { "description": "Allows imports from insecure https hosts.", "advanced": true },
    "source-map"            : { "description": "Outputs a v3 sourcemap to the filename." },
    "source-map-rootpath"   : { "description": "Adds this path onto the sourcemap filename and less file paths.", "advanced": true },
    "source-map-basepath"   : { "description": "Sets sourcemap base path, defaults to current working directory.", "advanced": true },
    "source-map-less-inline": { "description": "Puts the less files into the map instead of referencing them.", "advanced": true },
    "source-map-map-inline" : { "description": "Puts the map (and any less files) as a base64 data uri into the output css file.", "advanced": true },
    "source-map-url"        : { "description": "Sets a custom URL to map file, for sourceMappingURL comment in generated CSS file.", "advanced": true },
    "rootpath"              : { "description": "Sets rootpath for url rewriting in relative imports and urls. Works with or without the relative-urls option.", "alias": "rp", "advanced": true },
    "relative-urls"         : { "description": "Re-writes relative urls to the base less file.", "alias": "ru", "advanced": true },
    "strict-math"           : { "description": "Turns on or off strict math, where in strict mode, math. Requires brackets. This option may default to on and then be removed in the future.", "alias": "sm", "advanced": true },
    "strict-units"          : { "description": "Allows mixed units. E.g. 1px+1em or 1px*1px which have units that cannot be represented.", "alias": "su", "advanced": true },
    "global-var"            : { "description": "Defines a variable that can be referenced by the file.", "advanced": true },
    "modify-var"            : { "description": "Modifies a variable already declared in the file.", "advanced": true },
    "url-args"              : { "description": "Adds params into url tokens.\nE.g. 42, cb=42 or \"a=1&b=2\".", "advanced": true },
    "plugin"                : { "description": "Loads a plugin.\nLike --clear-css or --autoprefix." }
};

// Print the Supported Options.
if(argv.help
|| argv.h) {
    require("../lib/help.js").show({
        "usageSyntax"     : "less-seeker [options] [file]",
        "supportedOptions": supportedOptions,
        "fullHelp"        : argv.help == "full"
    });
    return;
}
